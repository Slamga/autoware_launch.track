<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="livox_avia_macro" params="name parent x y z roll pitch yaw">
    <xacro:property name="mass" value="0.35"/> <!-- 真实重量大约350g，可调整 -->

    <!-- 传感器固定到机器人 -->
    <joint name="${name}_mount_joint" type="fixed">
      <origin rpy="${roll} ${pitch} ${yaw}" xyz="${x} ${y} ${z}"/>
      <parent link="${parent}"/>
      <child link="${name}_base_link"/>
    </joint>

    <!-- 传感器 link -->
    <link name="${name}_base_link">
      <!-- 可视化：使用 STL -->
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://livox_avia_description/meshes/livox_avia.dae" scale="1.0 1.0 1.0"/>
        </geometry>
      </visual>

      <!-- 碰撞体：可以继续用简化的 box，避免 STL 太复杂 -->
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.07 0.07 0.07"/> <!-- Avia 尺寸大约 70mm，可修改 -->
        </geometry>
      </collision>

      <!-- 惯性 -->
      <inertial>
        <mass value="${mass}"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.001" iyy="0.001" izz="0.001"
                 ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <!-- 传感器数据 frame（点云发布坐标系） -->
    <joint name="${name}_scan_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${name}_base_link"/>
      <child link="${name}"/>
    </joint>

    <link name="${name}">
      <inertial>
        <mass value="0.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>
  </xacro:macro>
</robot>
